<div class="each-post"> 
<% if flash[:success] %>
  <div class="flash-success">
    <%= flash[:success] %>
  </div>
<% end %>

<h3>
 <%=@post.title%> by
<%=@post.author.name%>

</h3>
<article class="comment-likes">
<span>Comments: <%=@post.comments_counter%></span> 
<span class="like-span">Likes: <%=@post.likes_counter%></span>
</article>


<%=@post.text%> 
  <% if can?(:destroy, @post) %>
    <%= render partial: 'shared/delete_button', locals: { item: @post, delete_url: user_post_path(@post) } %>
  <%end%>
</div>
<div class="filling-coomment-like">
<a href="/users/<%= params[:user_id] %>/posts/<%=params[:id]%>/comments/new" class="button-link">Comment Here</a>

<%= render 'likes/create' %>
</div>
<div class="each-post-comments">
<%@post.comments.each do |comment|%> 
<h6><%=comment.author.name%> : <%=comment.text%></h6> 
<% if can?(:destroy,comment) %>
 <%= render partial: 'shared/delete_button', locals: { item: comment, delete_url: user_post_comment_path(params[:user_id],params[:id],comment.id) } %>
<% end %>

<%end%>
</div>


 

  


