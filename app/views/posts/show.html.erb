<div class="each-post"> 
<% if flash[:success] %>
  <div class="flash-success">
    <%= flash[:success] %>
  </div>
<% end %>

<h3>
 <%=@post.title%> by
<%=@post.author.name%>

</h3>
<article class="comment-likes">
<span>Comments: <%=@post.comments_counter%></span>
<span class="like-span">Likes: <%=@post.likes_counter%></span>
</article>


<%=@post.text%>
</div>
<div class="filling-coomment-like">
<a href="/users/<%= params[:user_id] %>/posts/<%=params[:id]%>/comments/new" class="button-link">Comment Here</a>

<%= render 'likes/create' %>
</div>
<div class="each-post-comments">
<%@post.comments.each do |comment|%> 
<h6><%=comment.author.name%> : <%=comment.text%></h6>


<%end%>
</div>


 

  


